<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    tools:context=".About">

    <ImageView
        android:id="@+id/notify_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notify_img"
        android:layout_alignParentRight="true"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:text="Version: 1.0.0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/whats_new"
        android:layout_toRightOf="@+id/notify_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="7dp"
        android:text="What's New"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notify_img"
        android:layout_below="@+id/whats_new"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="7dp"
        android:text="Simple way to get notified about your events just by
scanning the posters of events."
        android:textSize="15sp" />
    <TextView
        android:id="@+id/faq_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/answer"
        android:text=" Tips"
        android:drawableLeft="@drawable/ic_info"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/faq_head"
        android:text="The user can delete the event just by swiping the list item to the left and they will be shown options to delete and share their events."
        android:textSize="17sp"
        android:paddingLeft="10dp" />

</RelativeLayout>
