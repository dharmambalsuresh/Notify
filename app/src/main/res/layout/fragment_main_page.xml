                android:fontFamily="@font/josefinsans_regular"
                android:padding="15dp"
                android:text="TextView"
                android:textAlignment="inherit"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />
        </RelativeLayout>
