<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPage">

    <RelativeLayout android:id="@+id/scan_event_qr"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/launch_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:contentDescription="@string/description_ocr"  />

        <ImageButton
            android:id="@+id/launch_qrscanner"
            android:layout_width="205dp"
            android:layout_height="255dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_icon_qr_code" />

        <TextView
            android:id="@+id/textView_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/launch_qrscanner"
            android:layout_marginTop="32dp"
            android:padding="7dp"
            android:text="Upcoming Events"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/upcoming_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_events">
            <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/primary_red"
                android:text="TextView"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="148dp"
                android:layout_height="154dp"
                android:layout_alignStart="@+id/textView_date"
                android:layout_marginTop="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_photo_frame" />

            <TextView
                android:id="@+id/textView_info"
                android:layout_width="257dp"
                android:layout_height="149dp"
                android:layout_alignEnd="@+id/textView_date"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="52dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/primary_red"
                android:textSize="15dp" />
        </RelativeLayout>

